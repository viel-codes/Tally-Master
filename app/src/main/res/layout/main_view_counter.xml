<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#8FF1E9"
    android:elevation="6dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

    <TextView
        android:id="@+id/id_name_tallies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif"
        android:text="Name"
        android:textColor="@color/material_dynamic_neutral0"
        android:textSize="24dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/txt_counter_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_goal_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_line_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="283dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="â€”"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn_delete_id"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00BCD4"
        app:srcCompat="@drawable/delete_button" />

    <ImageButton
        android:id="@+id/btn_edit_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00BCD4"
        app:srcCompat="@drawable/edit_button" />

    <ImageButton
        android:id="@+id/btn_decrement_id"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#00BCD4"
        app:srcCompat="@drawable/decrement_button" />

    <ImageButton
        android:id="@+id/btn_increment_id"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#00BCD4"
        app:srcCompat="@drawable/add_record" />


    </RelativeLayout>


    </androidx.cardview.widget.CardView>