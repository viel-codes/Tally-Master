<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#8FF1E9"
    android:elevation="6dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"

    <TextView
        android:id="@+id/id_name_tallies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"></TextView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_delete_btn_id"
        android:layout_width="43dp"
        android:layout_height="46dp"
        android:layout_marginLeft="180dp"
        android:clickable="true"
        app:fabSize="auto"
        app:maxImageSize="24dp"
        app:srcCompat="@drawable/delete_button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_marginLeft="300dp"
        android:clickable="true"
        app:srcCompat="@drawable/edit_button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="43dp"
        android:layout_height="46dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="60dp"
        android:clickable="true"
        app:srcCompat="@drawable/decrement_button" />


</RelativeLayout>


</androidx.cardview.widget.CardView>