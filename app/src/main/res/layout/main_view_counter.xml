<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorOption7_sage"
    android:elevation="6dp"
    android:padding="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/id_name_tallies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Name"
            android:textSize="24dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_delete_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/beige"
                app:srcCompat="@drawable/delete_button" />

            <TextView
                android:id="@+id/txt_counter_id"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/black_defaultcolor"
                android:gravity="center"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_edit_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/beige"
                app:srcCompat="@drawable/edit_button" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_decrement_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/beige"
                app:srcCompat="@drawable/decrement_button" />

            <TextView
                android:id="@+id/txt_goal_id"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/black_defaultcolor"
                android:gravity="center"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_increment_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/beige"
                app:srcCompat="@drawable/add_record" />


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>